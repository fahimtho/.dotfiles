##########
## Apps ##
##########

# Web-Browser
alt + w
   chromium

# Gui File Manager
alt + f
  nemo

# Ranger
super + f
	kitty -1 --class=float ./.scripts/ranger/ranger.py ~/See 

# Terminal with Tmux
super + Return
	kitty -1 ~/.scripts/Main

# Mpd Full-on Mode
ctrl + m
  chromium http://localhost:6680/iris/

###########
## Lists ##
###########

# What Are Playing
alt + p
   ~/.scripts/players

# Clipboard History
alt + c
  rofi  -lines "6" -width "1904" -yoffset "419" -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'

# Mpd Menu
alt + m
  rofi-mpc

# Program Launcher Quick
shift + space
	rofi -theme ~/.config/rofi/launch_apps.rasi -no-fixed-num-lines -no-lazy-grab -show drun -modi drun

# Make Current Window full
super + m
  bspc desktop -l next

# Powermenu
super + p
  powermenu

# List windows as searchable
super + l
  rofi -show window -no-fixed-num-lines -yoffset "-498" -width "1904"

##############
## One Task ##
##############

# Reload Sxhkd
control + Escape
	pkill -USR1 -x sxhkd

# Restart Bspwm
super + r
	bspc wm -r

# Close Windows
alt + F1
	bspc node -c

# Set the window state
super + {t,s,space,shift+f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Move to Next Window
super + period
  bspc desktop -f 'next.occupied'

# Move to Previous Window
super + comma
  bspc desktop -f 'prev.occupied'

# Switch to last active desktop
super + Tab
  bspc desktop -f 'last.occupied'

# Switch to last node
super + grave
  bspc node -f 'last'

# Send Window to the given desktop without focus
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

# Move focused window to the next or previous workspace and then switch to that workspace
super + alt + {Left,Right}
    id=$(bspc query --nodes --node); bspc node --to-desktop {prev,next}; bspc desktop --focus next; bspc node --focus ${id}

# Unhide Menu
alt + control + h
  ~/.scripts/bspc-unhide-menu

# Hide curent focused window
super + h
  ~/.scripts/bspc-ordered-hide hide

# Un-Hide curent focused window
super + shift + h
  ~/.scripts/bspc-ordered-hide unhide --focus

# Go to next empty workspace
super + e
  bspc desktop -f 'next.!occupied'

# Goto Previous empty workspace
super + q
  bspc desktop -f 'prev.!occupied'

# Take screenshot
Print
  ~/.scripts/rofi-screenshot

# Full Window Screen shot
shift + Print
  ~/scripts/rofi-screenshot -s

# Search last copyed text on google
alt + s
  ~/.scripts/clip

# Snip to Clipboard
super + alt + s
  ~/.scripts/snip

# Turn down volumn
XF86AudioLowerVolume
  ponymix decrease 5 --max-volume 200 && dunstify -a System -t 10000 -h string:x-dunst-stack-tag:volume -h int:value:$( ponymix get-volume) "  Volume: $(ponymix get-volume)% "

# Turn up volum
XF86AudioRaiseVolume
  ponymix increase 5  --max-volume 200 && dunstify -a System -t 10000 -h string:x-dunst-stack-tag:volume -h int:value:$( ponymix get-volume) "  Volume: $(ponymix get-volume)% "

# Mute Mic
XF86AudioMicMute
  amixer set Capture toggle && amixer get Capture | grep '\[off\]' && notify-send "MIC switched OFF" || notify-send "MIC switched ON"

# Mute Sound
XF86AudioMute
  pulseaudio-control togmute && notify-send "No Sound" "Enjoy The Peace or Whatever"

###################
## Control Sound ##
###################

# Play (wireless)
XF86AudioPlay
  playerctl play

# Mpd Pause (wireless)
XF86AudioPause
  playerctl pause

# Mpd Previous Song (Wireless)
XF86AudioNext
  playerctl previous

# Mpd Next Song (Wireless)
XF86AudioPrev
  playerctl next

# Mpd Pause Music (Keyboard)
control + space
  mpc toggle

# Mpd Next song (Keyboard)
control + Left
  mpc prev

# Mpd Previous song (Keyboard)
control + Right
  mpc next

# Increase Volumn by 5 (mpd)
control + Up
  mpc volume +5

# Decrease Volumn by 5 (mpd)
control + Down
  mpc volume -5

# Skip 5 second ahead (mpd)
control + shift + Right
  mpc seek +5

# Skip 5 second previous (mpd)
control + shift + Left
  mpc seek -5

# Pause Media (mpris)
Menu
  playerctl play-pause

# Next Track (mpris)
ctrl + period
  playerctl next

# Previous Track (mpris)
ctrl + comma
  playerctl previous

# Change Orientation
super + o
	bspc node '@parent.vertical' -R  90 \
	    || bspc node '@parent' -R -90

