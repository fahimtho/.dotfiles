# Web-Browser
alt + w 
   chromium

# Ranger
alt + f
 kitty -1 --class=float ./.scripts/ranger/ranger.py
  
# Rofi-File Manager
alt + o
   rofi  -yoffset "-300" -no-fixed-num-lines -show file-browser-extended -display-file-browser-extended "files"

# Terminal with Tmux
super + Return
	kitty --class=Tmux -1 ~/.scripts/Main 

# Mpd Full-on Mode
ctrl + m
  chromium http://localhost:6680/iris/kiosk-mode

# Terminal
alt + Return
  kitty 

