# What Are Playing
alt + p
   ~/.scripts/players

# Clipboard History
alt + c
  rofi  -yoffset "-200" -no-fixed-num-lines -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}'
 
# Mpd Menu
alt + m
  rofi-mpc

# Dotfiles
super + c
  /home/fh1m/.scripts/confedit

# Program Launcher
shift + space
	 ~/.config/rofi/launchers/colorful/launcher.sh

# Set the node flags (marked,locked,sticky,private)
super + m
	~/.scripts/bspc-flag-menu

# Powermenu
super + p
  powermenu

# List windows as searchable 
super + l
  rofi -show window -no-fixed-num-lines -yoffset "-100"

# Twitch Channels
super + s
  rofi-ttv

# Run Tasks 
ctrl + Return
  ~/.scripts/task.sh

# Todos
super + w
   rofi -modi tasks:rofi-taskwarrior -offset '-100' -no-fixed-num-lines -show tasks

##############
## One Task ##
##############

# Reload Sxhkd
control + Escape
	pkill -USR1 -x sxhkd

# Restart Bspwm
super + r
	bspc wm -r

# Close Windows
alt + F1
	bspc node -c

# Make Current Window Full
super + f
	bspc desktop -l next

# Set the window state
super + {t,shift + p,space,shift+f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Move to Next Window
super + F1 
  bspc desktop -f 'next.occupied'

# Move to Previous Window
super + Escape
  bspc desktop -f 'prev.occupied'

# Switch to last active desktop
super + Tab
  bspc desktop -f 'last.occupied'

# Switch to last node
super + grave
  bspc node -f 'last'

# Send Window to the given desktop without focus
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}' 

# Move focused window to the next or previous workspace and then switch to that workspace
alt + control + {Left,Right}
    id=$(bspc query --nodes --node); bspc node --to-desktop {prev,next}; bspc desktop --focus next; bspc node --focus ${id}

# Unhide Menu
alt + h
  ~/.scripts/bspc-unhide-menu

# Hide curent focused window
super + h
  ~/.scripts/bspc-ordered-hide hide

# Un-Hide curent focused window
super + shift + h
  ~/.scripts/bspc-ordered-hide unhide --focus

# Go to next empty workspace
super + e
  bspc desktop -f 'next.!occupied'

# Goto Previous empty workspace
super + q
  bspc desktop -f 'prev.!occupied'

# Watch youtube with mpv
super + y
 ~/.scripts/youtube

# Rofi-Youtube Menu
alt + y
  ytfzf -N -D -l 

# Take screenshot 
Print
  flameshot gui

# Full Window Screen shot
shift + Print
  flameshot full -p ~/Pictures/Screenshots

# Search last copyed text on google
alt + s
  ~/.local/bin/clip

# Turn down volumn
XF86AudioLowerVolume
  ponymix decrease 5 --max-volume 200 && dunstify -a System -t 10000 -h string:x-dunst-stack-tag:volume -h int:value:$( ponymix get-volume) "  Volume: $(ponymix get-volume)% "

# Turn up volum
XF86AudioRaiseVolume
  ponymix increase 5  --max-volume 200 && dunstify -a System -t 10000 -h string:x-dunst-stack-tag:volume -h int:value:$( ponymix get-volume) "  Volume: $(ponymix get-volume)% " 

# Mute Mic
XF86AudioMicMute
  amixer set Capture toggle && amixer get Capture | grep '\[off\]' && notify-send "MIC switched OFF" || notify-send "MIC switched ON"

# Mute Sound
XF86AudioMute
  pulseaudio-control togmute

# Change orientation
super + equal
  bspc node -n last.automatic

###################
## Control Sound ##
###################

# Mpd Play (wireless)
XF86AudioPlay 
  mpc play

# Mpd Pause (wireless)
XF86AudioPause
  mpc pause

# Mpd Previous Song (Wireless)
XF86AudioNext 
  mpc prev

# Mpd Next Song (Wireless)
XF86AudioPrev
  mpc next

# Mpd Pause Music (Keyboard)
control + space
  mpc toggle

# Mpd Next song (Keyboard)
control + Left
  mpc prev

# Mpd Previous song (Keyboard)
control + Right
  mpc next 

# Increase Volumn by 5 (mpd)
control + Up
  mpc volume +5

# Decrease Volumn by 5 (mpd)
control + Down
  mpc volume -5

# Skip 5 second ahead (mpd)
control + shift + Right
  mpc seek +5

# Skip 5 second previous (mpd)
control + shift + Left
  mpc seek -5

# Pause Media (mpris)
Menu 
  playerctl play-pause

# Next Track (mpris)
ctrl + period
  playerctl next

# Previous Track (mpris)
ctrl + comma
  playerctl previous
 
