set default-bg rgba(0,0,0,0.85)
set recolor-lightcolor rgba(0,0,0,0)
set recolor-darkcolor black
set recolor-lightcolor rgba(0,0,0,0)
set recolor-lightcolor rgba(255,255,255,0)

set window-title-basename "true"
set selection-clipboard "clipboard"

# Dracula color theme for Zathura
# Swaps Foreground for Background to get a light version if the user prefers

#
# Dracula color theme
#

set notification-error-bg       "#000000" # Red
set notification-error-fg       "#8bb9f6" # Foreground
set notification-warning-bg     "#000000" # Orange
set notification-warning-fg     "#8bb9f6" # Selection
set notification-bg             "#000000" # Background
set notification-fg             "#8bb9f6" # Foreground

set completion-bg               "#000000" # Background
set completion-fg               "#8bb9f6" # Comment
set completion-group-bg         rgb(0,0,0,0) # Background
set completion-group-fg         "#004eff" # Comment
set completion-highlight-bg     "#004eff" # Selection
set completion-highlight-fg     "#000000" # Foreground

set index-bg                    rgb(0,0,0,0) # Background
set index-fg                    "#004eff" # Foreground
set index-active-bg             "#004eff" # Current Line
set index-active-fg             "#000000" # Foreground

set inputbar-bg                 rgb(0,0,0,0) # Background
set inputbar-fg                 "#8bb9f6" # Foreground
set statusbar-bg                rgba(0,0,0,0) # Background
set statusbar-fg                "#004eff" # Foreground

set highlight-color             "#004eff"
set highlight-active-color      "#004eff"

set default-bg                  rgba(0,0,0,0.92)
set default-fg                  "#8bb9f6" # Foreground

set render-loading              true
set render-loading-fg           "#282a36" # Background
set render-loading-bg           "#8bb9f6" # Foreground

# Recolor mode settings

set recolor-lightcolor          rgba(0,0,0,0) # Background
set recolor-darkcolor           "#8bb9f6" # Foreground

#
# Startup options
#
set adjust-open width
set recolor true
set guioptions none
set font "Iosevka Custom 11"
set n-completion-items 30
set show-recent 30
set selection-notification false

map c recolor
map m toggle_page_mode
map R reload
