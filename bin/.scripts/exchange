#!/usr/bin/env sh

from=$(forx --list | tr , '\n'| tr -d ' ' | rofi -dmenu -i -p   -no-fixed-num-lines -width "300" -yoffset "-490" -xoffset "-795" -lines "5")

if [[ -z $from ]];
then
  exit 1
else
  to=$(forx --list | tr , '\n'| tr -d ' ' | rofi -dmenu -i -p   -no-fixed-num-lines -width "300" -yoffset "-490" -xoffset "-795" -lines "5")
  if [[ -z $to ]];
  then
    exit
  else
    amount=$(rofi -dmenu -i -p   -no-fixed-num-lines -width "300" -yoffset "-490" -xoffset "-795" -lines "5")
    if [[ -z $amount ]];
    then
      exit 1
    else
      notify-send "Currency Exchange" "$(forx $from $to -q $amount)" -i ~/Pictures/.icons/exchange.png -t 100000
    fi
  fi
fi
