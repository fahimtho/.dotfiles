#!/usr/bin/env bash

BOOKS_DIR=~/Study

readarray -t F_ARRAY <<< "$(find "$BOOKS_DIR" -type f -name '*.pdf')"
declare -A BOOKS

get_books() {
  if [[ ! -z ${F_ARRAY[@]} ]]; then
    for i in "${!F_ARRAY[@]}"
    do
      path=${F_ARRAY[$i]}
      file=$(basename "${F_ARRAY[$i]}")
      BOOKS+=(["$file"]="$path")
    done
  else
      echo "$BOOKS_DIR is empty!"
      echo "Please put some books in it."
      echo "Only .pdf files are accepted."
      exit
  fi
}

gen_list(){
  for i in "${!BOOKS[@]}"
  do
    echo "$i"
  done
}

main() {
  get_books
  book=$( (gen_list) | rofi -dmenu -lines "100" -width "1913" -yoffset "-504" -theme ~/.config/rofi/reverse.rasi -i -matching fuzzy -no-custom -location 0 -p "ï«™" -no-fixed-num-lines )
  if [ -n "$book" ]; then
    zathura "${BOOKS[$book]}"
  fi
}

main
exit 0
